model Todo {
    fields {
        complete Boolean
        title Text
        description Text?
    }

    operations {
        create createTodo() with (title, complete)
        update setCompletion(id) with (complete)
        update updateTodo(id) with (title, description)
        list todos()
        list todosByStatus(complete)
    }
}

api Web {
    @graphql
    models {
        Todo
    }
}

